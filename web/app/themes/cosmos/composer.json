{
  "name": "biguniverse/cosmos",
  "type": "wordpress-theme",
  "license": "MIT",
  "description": "WordPress theme for BigUniverse magazine",
  "homepage": "https://biguniverse.ru",
  "authors": [
    {
      "name": "Ruslan Komjakov",
      "email": "ruslan@komyakov.me",
      "homepage": "https://github.com/rslnk"
    }
  ],
  "keywords": [
    "wordpress"
  ],
  "support": {
    "issues": "https://github.com/rslnk/biguniverse/issues"
  },
  "autoload": {
    "psr-4": {
      "Roots\\Sage\\": "src/lib/Sage/"
    }
  },
  "require": {
    "php": ">=5.5.0",
    "composer/installers": "~1.0"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^2.5.1",
    "phpmd/phpmd": "^2.4.2"
  },
  "scripts": {
    "test": [
      "vendor/bin/phpcs",
      "vendor/bin/phpmd src text cleancode,codesize,controversial,design,naming,unusedcode"
    ]
  }
}
