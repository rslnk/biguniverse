.c-search-form
  position relative
  //max-width 640px
  width 80%

  +above('m')
    width 100%
  
  // Form underline
  &:before
    display block
    position absolute
    left 0
    bottom 0
    //z-index 1
    content ''
    //width 100%
    height 2px
    background $gray--light

  input
    display block
    padding-bottom rem(8px)
    font-size rem(48px)
    line-height rem(56px)
    color $mint
    border 0
    
  .c-search-form__submit
    position absolute
    right 0
    top rem(10px)
    font-size rem(35px)
    color $mint
    //background-color $white
    
    &:hover
    &:focus
      color $mint - 15%
