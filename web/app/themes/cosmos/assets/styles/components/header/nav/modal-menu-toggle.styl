/**
 * Site navigation modal menu toggle
 */
.c-nav__modal-menu-toggle
  @extend .o-btn

  position relative
  z-index 998
  float left
  text-align center
  
  .c-icon-menu
    display block
    size rem(50px)
    
    // Default state: three bars
    span
      display block
      position absolute
      top 50%
      left 14px
      margin-top -1px

      width 20px
      height 2px

      transition .4s
      background-color $carbon-black
      
      &:first-child
        transform translate(0, -6px)
      &:last-child
        transform translate(0, 6px)
  
  // Toggled state: 'x'
  .is-open
    span
      &:first-child
        transform rotate(45deg) translate(0, 0)
      &:nth-child(2)
        transform scaleX(0)
      &:last-child
        transform rotate(-45deg) translate(0, 0)
      
