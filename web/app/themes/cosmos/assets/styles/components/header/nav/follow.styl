/*
 * Site navigation follow options (list)
*/
.c-nav__follow
  display none
  
  +above('l')
    display block
    
    @extend .o-ui-list
    
    float right
    padding-right rem(8px)
    
    li
      display inline
      
      a
        display inline-block
        padding rem(16px) rem(8px)
        font-size rem(18px)
        color $gray
        
        &:hover
        &:focus
          color $gray--medium
